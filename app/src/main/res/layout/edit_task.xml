<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".task.Activities.EditTask"
                                                   android:background="@color/orange">

    <RelativeLayout
            android:layout_width="419dp"
            android:layout_height="546dp"


            android:id="@+id/relativeLayout"
            android:background="@drawable/card_background"
            android:backgroundTint="@color/offwhite" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.897">
        <Spinner
                android:id="@+id/spinnerCat"
                android:layout_width="312dp"
                android:layout_height="57dp"
                android:layout_marginStart="54dp"
                android:spinnerMode="dropdown"
                tools:ignore="SpeakableTextPresentCheck"
                android:dropDownSelector="@android:drawable/arrow_down_float" android:dropDownWidth="wrap_content"
                android:backgroundTint="@color/orange" android:foreground="@drawable/b"
                android:popupBackground="@drawable/spinner_options" android:layout_alignParentBottom="true"
                android:layout_marginBottom="361dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="48dp" android:layout_alignParentStart="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="47dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/EditTaskName"
                tools:ignore="DuplicateSpeakableTextCheck" android:hint="  Task Name"
                android:textSize="20sp"
                android:backgroundTint="#02FFFFFF" android:foreground="@drawable/b" android:textColor="@color/navy"
                android:layout_alignParentBottom="true" android:layout_marginBottom="444dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="48dp"
                android:layout_alignParentStart="true" android:layout_marginStart="54dp"
                android:layout_alignParentTop="true"/>
        <EditText
                android:layout_width="280dp"
                android:layout_height="59dp"
                android:inputType="date"
                android:ems="10"
                android:cursorVisible="false"
                android:id="@+id/PickDate"
                android:minHeight="48dp"
                tools:ignore="SpeakableTextPresentCheck" android:hint="   Pick a Date"
                android:textSize="20sp"
                android:backgroundTint="#00595454"
                android:focusable="false"
                android:selectAllOnFocus="false" android:foreground="@drawable/b"
                android:layout_alignParentEnd="true" android:layout_marginEnd="48dp"
                android:layout_alignParentStart="true" android:layout_marginStart="54dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="272dp"
                android:textColor="@color/navy"/>
        <Spinner
                android:layout_width="288dp"
                android:layout_height="63dp"
                android:id="@+id/spinnerPri"
                android:backgroundTint="@color/orange"
                tools:ignore="SpeakableTextPresentCheck"
                android:popupBackground="@drawable/spinner_options"
                android:spinnerMode="dropdown" android:foreground="@drawable/b"
                android:layout_alignParentBottom="true" android:layout_marginBottom="173dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="48dp"
                android:layout_alignParentStart="true" android:layout_marginStart="54dp"/>
        <Button


                android:text="Add"
                android:layout_width="155dp"
                android:background="@drawable/button"
                android:layout_height="67dp" android:id="@+id/button"
                android:backgroundTint="@color/orange" android:textColor="@color/offwhite" android:textAlignment="center"
                android:textSize="20sp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="75dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="124dp"
                android:layout_alignParentStart="true" android:layout_marginStart="136dp"/>
    </RelativeLayout>
    <TextView
            android:text="Edit Task"
            android:layout_width="401dp"
            android:layout_height="74dp" android:id="@+id/textView5"
            android:textAlignment="center" android:textStyle="bold" android:textSize="40sp"
            android:textColor="@color/offwhite"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.316" android:layout_marginTop="52dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>