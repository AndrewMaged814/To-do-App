<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/offwhite">


    <androidx.constraintlayout.widget.ConstraintLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/Question3"
            app:layout_constraintTop_toBottomOf="@+id/Question3"
            tools:context=".task.Activities.PersonalityTest">


        <TextView
                android:id="@+id/Question1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="127dp"
                android:text="Q1:"
                android:fontFamily="@font/seg_ui_semibold"
                android:textColor="@color/navy"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.255"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="532dp" app:layout_constraintBottom_toTopOf="@+id/Question3"/>

        <CheckBox
                android:id="@+id/Q1Option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="1-2 hours"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_regular"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.119"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Question1"
                app:layout_constraintVertical_bias="0.002"/>

        <CheckBox
                android:id="@+id/Q1Option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="408dp"
                android:text="2-5 hours"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.119"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Q1Option1"
                app:layout_constraintVertical_bias="0.0"/>

        <CheckBox
                android:id="@+id/Q1Option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="More than 5 hours"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.146"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Q1Option2"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:id="@+id/Question2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="272dp"
                android:text="Q2:"
                android:fontFamily="@font/seg_ui_semibold"
                android:textColor="@color/navy"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Question1"/>

        <TextView
                android:id="@+id/Question3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Q3:"
                android:fontFamily="@font/seg_ui_semibold"
                android:textColor="@color/navy"
                android:textSize="26sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Question1" android:layout_marginBottom="317dp"/>

        <CheckBox
                android:id="@+id/Q3Option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Outdoor activities"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.192"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Question3"/>

        <CheckBox
                android:id="@+id/Q3Option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="working on projects and side hustles"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Q3Option1"/>
        <CheckBox
                android:id="@+id/Q3Option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="Watching movies and relaxing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.327"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Q3Option2"/>
        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Personality Test"
                android:gravity="center"
                android:textSize="40sp"
                android:fontFamily="@font/segoe_ui_bold"
                android:textColor="@color/navy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <CheckBox
                android:id="@+id/Q2Option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Frequently"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.153"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Question2"/>

        <CheckBox
                android:id="@+id/Q2Option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="Every once in a while "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.222"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Q2Option1"/>
        <CheckBox
                android:id="@+id/Q2Option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After long sessions"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.188"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/Q2Option2"/>
        <Button
                android:id="@+id/Hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:background="@drawable/button_background"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_marginStart="216dp" android:layout_marginEnd="89dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="269dp"
                app:layout_constraintTop_toBottomOf="@+id/Question3" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>