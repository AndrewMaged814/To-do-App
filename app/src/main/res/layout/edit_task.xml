<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".task.Activities.EditTask"
>
    <TextView
            android:text="Date"
            android:layout_width="149dp"
            android:layout_height="29dp" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/PickDate" app:layout_constraintBottom_toBottomOf="@+id/PickDate"
            app:layout_constraintVertical_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/PickDate" app:layout_constraintHorizontal_bias="0.218"
            android:textSize="20sp" android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:textColor="#272424"/>
    <TextView
            android:text="Name"
            android:layout_width="149dp"
            android:layout_height="29dp" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.428"
            android:textSize="20sp"
            android:textStyle="bold" android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:textColor="#1C1B1B"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.045"/>
    <Spinner
            android:layout_width="176dp"
            android:layout_height="48dp" android:id="@+id/spinnerCat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp"
            android:spinnerMode="dropdown"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="472dp"
            android:dropDownSelector="@android:drawable/arrow_down_float" android:dropDownWidth="match_parent"
            android:backgroundTint="#1C1C1E"/>


    <Button

            android:text="Edit"
            android:layout_width="120dp"
            android:background="@drawable/button"
            android:layout_height="50dp" android:id="@+id/button"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="52dp"
            android:backgroundTint="#032643" android:textColor="#FFFFFF" android:textAlignment="center"
            android:textSize="20sp"/>
    <TextView

            android:layout_width="149dp"
            android:layout_height="29dp" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="224dp" android:textStyle="bold" android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:textColor="#1C1A1A"
            android:text="Priority"/>
    <EditText
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:inputType="date"
            android:ems="10"
            android:cursorVisible="false"
            android:id="@+id/PickDate"
            android:minHeight="48dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="121dp"
            app:layout_constraintVertical_bias="0.672"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="204dp"
            tools:ignore="SpeakableTextPresentCheck" android:hint="Pick a Date"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="20sp" android:backgroundTint="#595454"/>
    <TextView
            android:text="Category"
            android:layout_width="149dp"
            android:layout_height="29dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/spinnerCat"
            app:layout_constraintBottom_toBottomOf="@+id/spinnerCat" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" app:layout_constraintVertical_bias="0.458" android:textStyle="bold"
            android:textSize="20sp" android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:textColor="#222020"/>
    <TextView
            android:text="Edit Task"
            android:layout_width="419dp"
            android:layout_height="67dp" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.096"
            android:textAlignment="center" android:textStyle="bold" android:textSize="34sp"
            android:textColor="#040C5C"/>
    <EditText
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/EditTaskName"
            tools:ignore="DuplicateSpeakableTextCheck"
            android:hint="Task Name"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.427"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="208dp"
            android:backgroundTint="#9B97AE"/>
    <Spinner
            android:layout_width="208dp"
            android:layout_height="57dp" android:id="@+id/spinnerPri"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.69"
            app:layout_constraintEnd_toEndOf="parent" android:backgroundTint="#151515"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintHorizontal_bias="0.913" android:popupBackground="@drawable/spinner_options"/>
</androidx.constraintlayout.widget.ConstraintLayout>